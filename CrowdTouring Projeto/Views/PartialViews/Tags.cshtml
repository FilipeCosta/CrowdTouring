@model CrowdTouring_Projeto.Models.EditarUtilizadorViewModel

@using (Html.BeginForm("EditarUtilizador", "Account", null, FormMethod.Post, new { @class = "form form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">As tuas tags</legend>
    <div class="form‐group">
        <div class="col‐md‐offset‐3 col‐md‐9">
            <table style="margin-left:175px">
                <tr>
                    @{int cnt = 0;
                        List<CrowdTouring_Projeto.Models.TagUtilizador> Tags = ViewBag.Tags;
                        foreach (var tag in Tags)
                        {

                            if (cnt++ % 3 == 0)
                            {
                                @:</tr><tr>
                                }
                            @:<td style="margin-right:15px">
                                <input type="checkbox" name="selectedTag" value="@tag.TagId" checked="@tag.Seleccionado" />
                                    @tag.Nome
                                    @:</td>
                            }
                        @:</tr>
                    }
                </table>
            </div>
        </div>
        <div class="form-group" style="margin-top:20px">
            <div class="col-md-offset-2 col-md-9">
                <input type="submit" value="Guardar" class="btn btn-primary"  style="margin-left:20px" />
            </div>
        </div>
        </fieldset>
                        }
        
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}