@model CrowdTouring_Projeto.Models.EditarUtilizadorViewModel


@using (Html.BeginForm("EditarUtilizador", "Account", null, FormMethod.Post, new {@class="form form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Outras Informações</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Empresa, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Empresa, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Empresa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Iban, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Iban, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Iban, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Website, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Sobre, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Sobre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sobre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(m => m.Notificacao) Pretendo receber notificações da plataforma </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
        </fieldset>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
