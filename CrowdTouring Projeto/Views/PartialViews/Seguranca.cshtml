@model CrowdTouring_Projeto.ViewModel.Seguranca

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm("_Seguranca", "Account", null, FormMethod.Post, new { @class = "form form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Segurança</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessage("error", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationMessage("CustomError")
        <div class="form-group">
            @Html.LabelFor(m => m.NovaPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.NovaPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NovaPassword, "", new { @class = "text-danger" })
                @Html.ValidationMessage("error2", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Alterar Password" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
}
